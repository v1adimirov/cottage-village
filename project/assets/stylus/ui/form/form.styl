.field
    margin-bottom 15px 
    color #575454
    
    &__lbl
        display block
        margin-bottom 7px
        font-size 11px
        line-height 15px


.formOkMsg
    color #53a618
    text-align center 


.field-inline
    display flex
    margin 0 -7px 15px
    
    .field
        margin-bottom 0
        flex 1 1 auto
        width 100%
        padding 0 7px 
        
    &__txt
        flex 0 0 auto
        padding-top 22px 
        line-height 30px
        font-size 13px  
        font-weight normal 

.errorlist
    list-style none 
    padding 0
    margin 0
    font-size 11px 
    color #903334
    margin-top 3px 
    
    li
        padding 0
        margin 0
        
        &:after 
        &:before
            display none 
            

.form
    position relative
    color #575454
    font-weight normal 
    font-size $baseFontSize
    line-height $baseLineHeight
    background-color #FFF 
    padding 30px 40px 38px 
    
    // &__wrap
    //     padding 30px 40px 38px

    &__title
        margin-bottom 20px
        text-transform uppercase
        font-weight 700
        font-size 15px  
        color #575454

    &__footer
        position relative
        z-index 10 
        text-align right
        margin-top 21px 
        

    .loader
        display none
        
    &._loading .loader
        display block
        
    &._loading:after
        position absolute
        left 0
        top 0
        bottom 0
        right 0
        z-index 2 
        width 100%
        height 100%
        content "" 
        display block
        background-color rgba(#fff, .8) 



