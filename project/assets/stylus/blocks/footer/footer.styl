.footer
    flex 0 0 auto
    color #264c0a
    font-size 12px 
    line-height 14px
    padding 10px 0 14px
    
    a
        color inherit
        text-decoration none
        
        &:hover
            color inherit
            text-decoration underline 
    
    &__container
        display flex
        align-items center
        
    &__left
        flex 1 1 auto
        width 100%
        
    &__right
        flex 0 0 auto
        
    &__item
        display inline-block
        margin-left 35px