.emptyClouds
    position absolute
    left 0
    top 0
    bottom 650px
    width 100%
    display flex
    flex-direction column
    justify-content center
    
    &:after
        position absolute
        right 0
        top 0
        bottom 0
        width 121%
        height 100%
        overflow hidden
        content "" 
        display block
        background inline("clouds.png") no-repeat center center 
        opacity .5 
    
    @media $bglg
        bottom auto
        height 217px
    

.empty
    position relative
    flex 1 1 auto
    height 100% 
    
    &__cntn
        position relative
        z-index 20 
        padding-top 55px 
    
    a
        text-decoration none
        
        &:hover
            text-decoration underline
    
    &__title
        margin-bottom 6px 
        font-weight 700
        color #903334
        font-size 50px  
        text-align center
        

.emptyForm
    margin 0 auto
    
    .form
        margin 0 auto 
        width 400px 
        margin-top 30px 
    
    .form__title
        display none !important