.planDetail
    position relative
    padding 63px 0 
    
    .tokarevo 
        position relative
        right 40px 
        margin 0 auto 
        
        &._plan1
            position absolute
            top 115px 
            left 50px
            right auto
            margin 0 
    
    &__wrap
        position relative
        display flex
    
    &__left
        position relative
        z-index 60 
        flex 0 0 auto
        width 625px
        min-height 544px 
        text-align right
        
        &._plan1
            width 650px 
        
        .tokarevo
            display inline-block
            

    &__left._plan1 + &__right
        margin-left 30px 
        
    &__right
        padding-top 100px 
        margin-left 62px
        max-width 443px
        flex 0 0 auto

    .planText
        margin-bottom 62px
        
    &__other2
        position relative
        width 193px
        font-size 0
        line-height 0 
        
        a
            display block
            text-decoration none !important
            colot inherit !important
        
        .planFlag
            position absolute
            left 87px 
            top 25px 
        
    &__other1
        position relative
        margin -11px 0 0 5px
        width 97px
        font-size 0
        line-height 0 
        
        a
            display block
            text-decoration none !important
            colot inherit !important
        
        .planFlag
            position absolute
            left 52px 
            top 34px 


.planDetailLegend
    position absolute
    left 32px
    bottom 44px
    text-align left
    
    &_2
        bottom 14px 
    
    &__item
        position relative
        padding-left 49px
        margin-bottom 13px
        
        &:last-child
            margin-bottom 0
        
        &._mb
            margin-bottom 30px

    &__color
        position absolute
        left 0
        top 50%
        margin-top -12px 
        size(38px, 21px)
        
    &__icon
        position absolute
        top 50%
        left 6px 
        margin-top -13px 
        border-radius 50% 
        size(27px)
        background-color #fff 
        
        &:after
            display block
            content '' 
        
        &._kinder:after
            size(27px)
            bg("kindergarten.png")

        &._playground:after
            size(27px)
            bg("playground.png")

        &._shop:after
            size(27px)
            bg("shop.png")


.planDetailSvg
    position relative
    display inline-block
    font-size 0
    line-height 0 
    width 397px
    
    &__icon
        @extend .planDetailLegend__icon
        top 20px 
        left 30px 
        cursor pointer
        transition background-color .3s 
        
        &:hover
            background-color rgba(#fff , .8)
    &__icon:hover &__iconHind
        display block

    &__iconHind
        position absolute
        left 100% 
        top 100%
        height 32px
        margin 3px 0 0 -10px 
        border-radius 16px 
        line-height 32px
        padding 0 15px 
        background-color #FFF 
        color $cRed
        font-size 13px 
        white-space nowrap
        display none

    svg
        width 100%

    .area
        cursor pointer
        transition fill .3s

    .area:hover
        fill #93e265
        
    .area_reserved
        fill #ffbc53 !important

    .area_sold
        fill #ff7353 !important

    &_2
        top 30px
        right 11px 
        width 594px
        

