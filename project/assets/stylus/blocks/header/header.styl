.headerEmpty
    height 64px
    flex 0 0 auto

.header
    position fixed
    left 0
    right 0
    top 0
    z-index 310 
    height 64px
    flex 0 0 auto
    background inline("header_bg.png") repeat-x center center
    font-size 11px 
    line-height 1.3 
    
    &__container
        display flex
    
    &__logo
        display block
        position relative
        top 8px
        width 120px
        flex 0 0 auto
        

    &__right
        margin-right -9px 
        flex 0 0 auto
        
    &__middle
        flex 1 1 auto
        width 100%

@media $sm
    .headerEmpty
        display none

    .header
        position relative


.headerContacts
    display flex
    height 62px
    align-items center
    
    &__item
        position relative
        top -1px 
        flex 0 0 auto
        margin-left 10px
        color $cRed
        font-weight 700 
        
        &._ml
            margin-left 0
        
        &:first-child
            margin-left 0
        
        &._icon
            position relative
            margin-left 0
            height 62px
    
    &__email
        display block
        position relative
        top 13px
        padding 9px 
        font-size 0
        line-height 0
        transition opacity .3s
        
        &:hover
            opacity .5 

    &__email
        margin-left 8px
        
        &:after
            size(18px)
            display block
            content "" 
            bg('email.png')

    &__login
        position relative
        top 0 
        height 24px
        border-radius 12px 
        font-size 11px 
        line-height 24px 
        padding 0 10px 
        color #575454
        font-weight 700 
        background-color transparent
        transition background-color .3s
        display block
        text-decoration none !important 
        text-transform uppercase
        
        &:hover
        &._active
            color #fff
            background-color $cRed 

    .popup
        right 10px
        left auto


.headerManu
    position relative
    top -1px 
    height 62px
    display flex
    align-items center
    justify-content center
    
    &__item
        margin-right 1px 
        
        &:last-child
            margin-right 0 !important

    &__link
        height 24px
        border-radius 12px 
        line-height 24px 
        padding 0 9px 
        color #575454
        font-weight 700 
        background-color transparent
        transition background-color .3s
        display block
        text-decoration none !important 
        text-transform uppercase
        
        &:hover
        &._active
            color #fff
            background-color $cRed 
            
    @media $lg
        &__item
            margin-right 20px 
            